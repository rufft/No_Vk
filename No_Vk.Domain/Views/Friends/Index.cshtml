@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<User>

@foreach(var user in Model)
{
    <div class="frind-c">
        <div>@user.Login</div>
        <form asp-controller="User" asp-action="Index" method="post">
            <input type="hidden" name="addresseeId" value="@user.Id" />
            <button type="submit">Go To Addressee</button>
        </form>
    </div>
    <br />
}
